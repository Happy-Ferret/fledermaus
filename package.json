{
  "name": "fledermaus",
  "version": "0.0.0-development",
  "description": "Batmanâ€™s toolbelt for static site generation",
  "homepage": "https://github.com/sapegin/fledermaus",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapegin/fledermaus.git"
  },
  "bugs": {
    "url": "https://github.com/sapegin/fledermaus/issues"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "documentation": "^4.0.0-rc.1",
    "eslint": "^4.13.0",
    "eslint-config-tamia": "^4.2.3",
    "eslint-plugin-prettier": "^2.3.1",
    "jest": "^21.2.1",
    "prettier": "1.9.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^6.3.6",
    "semantic-release-tamia": "^1.1.1"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "escape-html": "^1.0.3",
    "fastmatter": "^2.0.1",
    "glob": "^7.1.2",
    "intl": "^1.2.5",
    "intl-format-cache": "^2.1.0",
    "intl-messageformat": "^2.2.0",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "lowlight": "^1.9.1",
    "md5-file": "^3.2.3",
    "mkdirp": "^0.5.1",
    "parse5": "^3.0.3",
    "remark": "^8.0.0",
    "remark-html": "^7.0.0",
    "richtypo": "^2.0.0",
    "rss": "^1.2.2",
    "strip-ansi": "^4.0.0",
    "striptags": "^3.1.1",
    "unist-util-visit": "^1.3.0",
    "vdo": "^4.2.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:jest",
    "lint": "eslint . --cache --fix",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "compile": "babel -d lib/ src/",
    "prepublish": "npm run compile",
    "docs": "mkdirp docs && npm run docs:core && npm run docs:helpers && npm run docs:util",
    "docs:core": "documentation build --shallow --format md --output docs/core.md src/core.js",
    "docs:helpers": "documentation build --shallow --format md --output docs/helpers.md  src/helpers.js",
    "docs:util": "documentation build --shallow --format md --output docs/util.md  src/util.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "analyzeCommits": "semantic-release-tamia/analyzeCommits",
    "generateNotes": "semantic-release-tamia/generateNotes",
    "verifyRelease": "semantic-release-tamia/verifyRelease"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  }
}
